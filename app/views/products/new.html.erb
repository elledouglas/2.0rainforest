<h1> Add a new product </h1>
<% form for @product do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div>
  <%= f.label :price %>
  <%= f.decimal :price %>
</div>

<div>
  <%= f.submit "Submit" %>

</div>

<% end %>
