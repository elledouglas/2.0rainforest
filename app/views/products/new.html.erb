<h1> Add a new product </h1>
<% form_for @products do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div>
  <%= f.label :price_in_cents %>
  <%= f.text_field :price_in_cents %>
</div>

<div>
  <%= f.submit "Submit" %>

</div>

<% end %>
